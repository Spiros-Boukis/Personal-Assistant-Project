<UserControl x:Class="Personal_Assistant.CustomControls.SportsNewsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Personal_Assistant.CustomControls"
             mc:Ignorable="d" 
             Height="800" Width="auto">
    <Grid>
        <StackPanel>
            <TabControl>
                <TabItem>
                    <TabItem.Header>
                        <Image Source="/Resources/Images/Sports/football.png" Width="70" Height="70"></Image>
                    </TabItem.Header>
                    <ListView x:Name="footballFixturesListView" Width="500" Height="500" MaxHeight="500">
                        <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                                <Label  FontSize="22" FontWeight="ExtraLight" Content="{Binding Time}"></Label>

                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <Label FontSize="25" Content="{Binding Team1}"></Label>
                                                <Label FontSize="25">v.</Label>
                                                <Label FontSize="25" Content="{Binding Team2}"></Label>
                                            </StackPanel>
                                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                                <Label FontSize="22" FontWeight="ExtraLight" Content="{Binding Place}"></Label>

                                            </StackPanel>
                                        </StackPanel>
                                        <Button Click="Notify_Football" Width="50" Height="50" VerticalAlignment="Center">
                                            <Image Source="/Resources/Images/notification.png"></Image>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <Image Source="/Resources/Images/Sports/basketball.png" Width="70" Height="70"></Image>
                    </TabItem.Header>
                    <ListView x:Name="basketballFixturesListView" Width="500" Height="500" MaxHeight="500">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                            <Label  FontSize="22" FontWeight="ExtraLight" Content="{Binding Time}"></Label>

                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <Label FontSize="25" Content="{Binding Team1}"></Label>
                                            <Label FontSize="25">v.</Label>
                                            <Label FontSize="25" Content="{Binding Team2}"></Label>
                                        </StackPanel>
                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                            <Label FontSize="22" FontWeight="ExtraLight" Content="{Binding Place}"></Label>

                                        </StackPanel>
                                    </StackPanel>
                                    <Button Click="Notify_Basketball" Width="50" Height="50" VerticalAlignment="Center">
                                        <Image Source="/Resources/Images/notification.png"></Image>
                                    </Button>
                                </StackPanel>


                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <Image Source="/Resources/Images/Sports/tennis.png" Width="70" Height="70"></Image>
                    </TabItem.Header>
                    <ListView x:Name="tennisFixturesListView" Width="500" Height="500" MaxHeight="500">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                            <Label  FontSize="22" FontWeight="ExtraLight" Content="{Binding Time}"></Label>

                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <Label FontSize="25" Content="{Binding Team1}"></Label>
                                            <Label FontSize="25">v.</Label>
                                            <Label FontSize="25" Content="{Binding Team2}"></Label>
                                        </StackPanel>
                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                            <Label FontSize="22" FontWeight="ExtraLight" Content="{Binding Place}"></Label>

                                        </StackPanel>
                                    </StackPanel>
                                    <Button Click="Notify_Tennis" Width="50" Height="50" VerticalAlignment="Center">
                                        <Image Source="/Resources/Images/notification.png"></Image>
                                    </Button>
                                </StackPanel>


                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </TabItem>
            </TabControl>


           
        </StackPanel>
        
    </Grid>
</UserControl>
