<UserControl x:Class="Personal_Assistant.CustomControls.TimeInputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Personal_Assistant.CustomControls"
             mc:Ignorable="d" 
             Height="auto" Width="auto">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBox Width="30" PreviewTextInput="Hours_PreviewTextInput"></TextBox>
            <Label>:</Label>
            <TextBox Width="30" PreviewTextInput="Minutes_PreviewTextInput"></TextBox>
        </StackPanel>
        
    </Grid>
</UserControl>
