<UserControl x:Class="Personal_Assistant.Tabs.EmailTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Personal_Assistant.Tabs"
             xmlns:local4="clr-namespace:Personal_Assistant.Tabs"  xmlns:local1="clr-namespace:Personal_Assistant.ControlTemplateSelectors"
xmlns:local2="clr-namespace:Personal_Assistant.CustomControls"
             mc:Ignorable="d" 
             Height="auto" Width="auto">

    <UserControl.Resources>
        <local1:EmailPreviewStyleSelector x:Key="styleSelector"/>
        <Style x:Key="UnreadEmailPreviewStyleTemplate" TargetType="local2:EmailPreviewControl">
            <Setter Property=""></Setter>
        </Style>
        <Style x:Key="ReadEmailPreviewStyleTemplate" TargetType="local2:EmailPreviewControl">

        </Style>
        <DataTemplate x:Key="EmailPreviewTemplate">
            
        </DataTemplate>
    </UserControl.Resources>
    <Grid ShowGridLines="True" MinHeight="500">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition MinWidth="500"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Grid.Column="0" Width="auto">
            <Border Style="{StaticResource EmailFolderHeaderBorderStyle}">
            <Label Style="{StaticResource EmailFolderHeaderStyle}">Εισερχόμενα</Label>
            </Border>
            <Border Style="{StaticResource EmailFolderHeaderBorderStyle}">
            <Label Style="{StaticResource EmailFolderHeaderStyle}">Εξερχόμενα</Label>
            </Border>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Column="1">
            <ListView Width="auto" Height="auto" x:Name="emailsListView" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Black" BorderThickness="2px" Width="1000" >
                            <StackPanel Orientation="Vertical" Width="auto" MouseDown="emailsListView_SelectionChanged">
                                <StackPanel Orientation="Horizontal">
                                <Label FontSize="20" FontWeight="Bold"   Width="auto" Height="35">From:</Label>
                                    <Label FontSize="20" FontWeight="Bold"  Content="{Binding From}" Width="auto" Height="35"/>
                                    <Label VerticalAlignment="Center" FontSize="14" FontWeight="Bold"   Width="auto" Height="auto">Title</Label>
                                    <Label VerticalAlignment="Center" FontSize="20" FontWeight="Bold"  Content="{Binding Title}" Width="auto" Height="auto"/>
                            </StackPanel>
                               

                                <TextBox x:Name="mailBody" IsReadOnly="True" Visibility="Collapsed" FontSize="13" MinWidth="500" Height="70"  Text="{Binding Body}"></TextBox>
                        </StackPanel>
                        </Border>
                    </DataTemplate>
                    
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>

    </Grid>
</UserControl>
